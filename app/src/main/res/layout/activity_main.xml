<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xử lý dữ liệu qua SQLite"
        android:gravity="center"
        android:background="#0b0b0b"
        android:textSize="20sp"
        android:textColor="#05ff33"/>

    <Button
        android:id="@+id/btn_xemlop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem lớp"
        android:onClick="xulyxemlop"/>

    <Button
        android:id="@+id/btn_themsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem sinh viên"
        android:onClick="xulythemsv"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvw_ds"
        android:listSelector="#fc73ec"/>

</LinearLayout>