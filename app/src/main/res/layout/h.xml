<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:weightSum="10">

      <TextView
          android:id="@+id/tv1"
          android:layout_width="104dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Mã sv:"
          android:textSize="30px" />
    <TextView
        android:id="@+id/tv_ma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:text="ma"
        android:layout_weight="9"/>
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:id="@+id/tv2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:text="Tên sv:"
            android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_ten"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:text="ten"
        android:layout_weight="9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:id="@+id/tv3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:text="Giới tính:"
            android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_gt"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:text="gt"
        android:layout_weight="9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:id="@+id/tv4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:text="Năm sinh:"
            android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_ns"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:text="ns"
        android:layout_weight="9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:id="@+id/tv5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:text="Mã Lớp:"
            android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_malop"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:text="malop"
        android:layout_weight="9"/>
    </LinearLayout>

</LinearLayout>
